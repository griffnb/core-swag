{
  "enabledMcpjsonServers": ["code_tools"],
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "permissions": {
    "allow": [
      "mcp__code_tools",
      "mcp__ui_code_tools",
      "Read(./**)"
    ],
   "deny": ["Read(*.env)", "Read(*.env.*)", "Read(*/.configs/**)"]
  },
  "plansDirectory":"./.agents/plans",
  "statusLine": {
    "type": "command",
    "command": "./.claude/statusline.sh",
    "padding": 0
  }
}
